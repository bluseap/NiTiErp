@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" href="/admin-side/images/powaco.ico" />

    <title>Login </title>

    <!-- Bootstrap -->

    <link href="~/vendor/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <!-- Font Awesome -->

    <link href="~/vendor/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- NProgress -->

    <link href="~/vendor/nprogress/nprogress.css" rel="stylesheet" />
    <!-- Animate.css -->

    <link href="~/vendor/animate.css/animate.css" rel="stylesheet" />
    <link href="~/vendor/notifyjs/styles/metro/notify-metro.css" rel="stylesheet" />
    <!-- Custom Theme Style -->
    <link href="~/admin-side/css/custom.css" rel="stylesheet" />
</head>

<body class="login">
    @*<a href="#" id="allownoti">Cho phép thông báo</a>
        <a href="#" id="shownoti">Hiển thị thông báo</a>*@

    <div>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form id="frmLogin">
                        @Html.AntiForgeryToken()
                        <div>
                            <img src="/admin-side/images/powaco148.png" alt="...">
                        </div>
                        <br />
                        <div>
                            <input type="text" class="form-control" name="userName" placeholder="Tên người dùng" id="txtUserName" required="" />
                        </div>
                        <div>
                            <input type="password" class="form-control" name="password" id="txtPassword" placeholder="Mật mã" required="" />
                        </div>
                        <div>
                            <a class="btn btn-default submit" href="#" id="btnLogin">Đăng nhập</a>

                        </div>


                        <br />
                        <div>

                            <div class="clearfix"></div>
                            <br />
                            <p> ©2019  Công Ty Cổ Phần Điện Nước An Giang - POWACO</p>

                        </div>
                    </form>
                </section>
            </div>

        </div>
    </div>
    <script src="~/vendor/jquery/jquery.js"></script>

    <script src="~/vendor/notifyjs/notify.js"></script>
    <script src="~/vendor/notifyjs/styles/metro/notify-metro.js"></script>

    <script src="~/vendor/jquery-validation/jquery.validate.js"></script>
    <script src="~/vendor/jquery-validation/additional-methods.js"></script>
    <script src="~/vendor/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    @*<script src="~/bundled/site-admin.min.js"></script>*@

    @*<script src="~/app/shared/thongbao.js" asp-append-version="true"></script>*@

    <script src="~/admin-app/shared/niti.js" asp-append-version="true"></script>

    <script src="~/admin-app/controllers/login/index.js" asp-append-version="true"></script>

    <script>
        var login = new loginController();
        login.initialize();
    </script>
</body>
</html>

