        <a id="hidUserName" style="visibility:hidden">@User.GetSpecificClaim("UserName") </a>
        <a id="hidUserEmail" style="visibility:hidden"> @User.GetSpecificClaim("Email") </a>
        <a id="hidUserFullName" style="visibility:hidden"> @User.GetSpecificClaim("FullName") </a>
        <a id="hidUserCorporationId" style="visibility:hidden"> @User.GetSpecificClaim("CorporationId") </a>
        <a id="hidUserAvatar" style="visibility:hidden"> @User.GetSpecificClaim("Avatar") </a>
        <a id="hidUserRoles" style="visibility:hidden"> @User.GetSpecificClaim("Roles") </a>
    </div>


