@inject IViewLocalizer Localizer
<div id="modal-add-edit" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">@Localizer["AddUpdateRole"]</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <input type="hidden" id="hidRoleId" value="" />
                    <input type="hidden" id="hidInsertRole" value="" />

                    <form class="form-horizontal" role="form" id="frmMaintainance">
                        <div class="form-group">
                            <label for="lbAddUpdateCorporation" class="col-sm-2 control-label no-padding-right">@Localizer["Corporation"]</label>
                            <div class="col-sm-10">
                                <select id="ddlAddUpdateCorporation" class="form-control"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="lbRoleName" class="col-sm-2 control-label no-padding-right">@Localizer["RoleName"]</label>
                            <div class="col-sm-10">
                                <textarea rows="4" name="txtRoleName" class="form-control" id="txtRoleName" placeholder=@Localizer["RoleName"] ></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="lbRoleDescription" class="col-sm-2 control-label no-padding-right">@Localizer["RoleDescription"]</label>
                            <div class="col-sm-10">
                                <textarea rows="4" name="txtRoleDescription" class="form-control" id="txtRoleDescription" placeholder=@Localizer["RoleDescription"]></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="btnSave" class="btn btn-success">@Localizer["RoleSave"]</button>
                                <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-danger">@Localizer["RoleClose"]</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
