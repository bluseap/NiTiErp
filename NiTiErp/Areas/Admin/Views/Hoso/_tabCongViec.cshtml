
<form class="form-horizontal form-label-left input_mask" role="form" id="frmMainCongViec">
    <input type="hidden" id="hidCongViecId" value="0" />

    <div class="form-group">
        <label for="lbCongTyXiNghiep" class="control-label col-md-2 col-sm-2 col-xs-12 ">Công ty, Xí nghiệp</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <select id="ddlCongTyXiNghiep" class="form-control"></select>
        </div>
        <label for="lbPhongBan" class="control-label col-md-2 col-sm-2 col-xs-12 ">Phòng, ban</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <select id="ddlPhongBan" class="form-control"></select>
        </div>
    </div>
    <div class="form-group">
        <label for="lbChucVu" class="control-label col-md-2 col-sm-2 col-xs-12">Chức vụ</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <select id="ddlChucVuNhanVien" class="form-control"></select>
        </div>
        <label for="lbCongTacChinh" class="control-label col-md-2 col-sm-2 col-xs-12 ">Công tác chính</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <input type="text" class="form-control has-feedback-right" id="txtCongTacChinh" placeholder="Công tác chính">
        </div>
    </div>
    <div class="form-group">
        <label for="lbSoQuyetDinhCongViec" class="control-label col-md-2 col-sm-2 col-xs-12">Số quyết định</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <input type="text" class="form-control has-feedback-right" id="txtSoQuyetDinhCongViec" placeholder="Số quyết định">
        </div>
        <label for="lbTenQuyetDinhCongViec" class="control-label col-md-2 col-sm-2 col-xs-12 ">Tên quyết định</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <input type="text" class="form-control has-feedback-right" id="txtTenQuyetDinhCongViec" placeholder="Tên quyết định">
        </div>
    </div>
    <div class="form-group">
        <label for="lbNgayKyCongViec" class="control-label col-md-2 col-sm-2 col-xs-12">Ngày ký</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <input type="text" class="form-control has-feedback-right" id="txtNgayKyCongViec" placeholder="Ngày ký">
        </div>
        <label for="lbNgayHieuLucCongViec" class="control-label col-md-2 col-sm-2 col-xs-12 ">Ngày hiệu lực</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <input type="text" class="form-control has-feedback-right" id="txtNgayHieuLucCongViec" placeholder="Ngày hiệu lực">
        </div>
    </div>
</form>

