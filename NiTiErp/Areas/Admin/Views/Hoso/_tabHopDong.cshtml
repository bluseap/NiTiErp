
<form class="form-horizontal form-label-left input_mask" role="form" id="frmMainHopDong">
    <input type="hidden" id="hidHopDongId" value="" />

    <div class="form-group">
        <label for="lbHocVi" class="control-label col-md-2 col-sm-2 col-xs-12 ">Số hợp đồng</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <input type="text" class="form-control has-feedback-right" id="txtSoHopDong" placeholder="Số hợp đồng">
        </div>
        <label for="lbLoaiHopDong" class="control-label col-md-2 col-sm-2 col-xs-12 ">Loại hợp đồng</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <select id="ddlLoaiHopDong" class="form-control"></select>
        </div>
    </div>
    <div class="form-group">
        <label for="lbNgayKyHopDong" class="control-label col-md-2 col-sm-2 col-xs-12 ">Ngày ký</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <input type="text" class="form-control has-feedback-right" id="txtNgayKyHopDong" placeholder="Ngày ký hợp đồng">
        </div>
        <label for="lbNgayHopDong" class="control-label col-md-2 col-sm-2 col-xs-12 ">Ngày hợp đồng</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <input type="text" class="form-control has-feedback-right" id="txtNgayHopDong" placeholder="Ngày hợp đồng">
        </div>
    </div>
    <div class="form-group">
        <label for="lbNgayHieuLuc" class="control-label col-md-2 col-sm-2 col-xs-12 ">Ngày hiệu lực</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <input type="text" class="form-control has-feedback-right" id="txtNgayHieuLuc" placeholder="Ngày hiệu lực">
        </div>
        <label for="lbNgayHetHan" class="control-label col-md-2 col-sm-2 col-xs-12 ">Ngày hết hạn</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <input type="text" class="form-control has-feedback-right" id="txtNgayHetHan" placeholder="Ngày hết hạn">
        </div>
    </div>
    <div class="form-group">
        <label for="lbHeSoLuongCoBan" class="control-label col-md-2 col-sm-2 col-xs-12 ">Hệ số</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <input type="text" name="txtHeSoLuongCoBan" class="form-control has-feedback-right" id="txtHeSoLuongCoBan" placeholder="Hệ số lương cơ bản">
        </div>
        <label for="lbLuongCoBan" class="control-label col-md-2 col-sm-2 col-xs-12 ">Lương cơ bản</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <input type="text" name="txtLuongCoBan" class="form-control has-feedback-right" id="txtLuongCoBan" placeholder="Lương cơ bản">
        </div>
    </div>
    <div class="form-group">
        <label for="lbChucVuKyHopDong" class="control-label col-md-2 col-sm-2 col-xs-12 ">Chức vụ ký hợp đồng</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <select id="ddlChucVuKyHopDong" class="form-control"></select>
        </div>
        <label for="lbTenKyHopDong" class="control-label col-md-2 col-sm-2 col-xs-12 ">Tên ký hợp đồng</label>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group has-feedback">
            <input type="text" name="txtTenKyHopDong" class="form-control has-feedback-right" id="txtTenKyHopDong" placeholder="Tên ký hợp đồng">
        </div>
    </div>    
</form>

